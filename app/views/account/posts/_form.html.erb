<div class="col-md-10 col-md-offset-1">
  <%= simple_form_for [:account, @post] do |f| %>
    <div class="row account-posts-form">
      <div class="col-md-10">
        <%= f.input :title %>
        <%= f.input :description %>
      </div>

      <div class="col-md-2 fixed-button">
        <%= f.label :category %>
        <%= f.select :category_id, current_user.blog.categories.all.map{ |c| [c.name, c.id] }, {}, :class => "form-control" %>
        <br>
        <%= f.label :status, label: "Change Status:" %>
        <br>
        <div class="btn-group" data-toggle="buttons">
          <% Post::STATUS.each do |status| %>
            <label class="btn btn-default btn-xs <%= (status == f.object.status)? 'active' : '' %>">
              <%= f.radio_button :status, status %>
              <%= t(status, :scope => "post.status") %>
            </label>
          <% end %>
        </div>
        <br><br>
        <%= f.submit "Save", class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  var editor = new Simditor({ textarea: $('#post_description'), toolbar: ['title', 'bold', 'italic', 'underline', 'strikethrough', 'color', '|', 'ol', 'ul', '|', 'markdown', 'blockquote', 'code', 'table', 'link','image', '|','hr', 'indent', 'outdent', 'alignment', '|', 'marked', 'mark'],  placeholder: '这里输入文字...', pasteImage: true, fileKey: 'file', upload: { params: null, connectionCount: 3, leaveConfirm: 'Uploading is in progress, are you sure to leave this page?' } });
</script>

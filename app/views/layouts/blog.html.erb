<!DOCTYPE html>
<html>
  <head>
    <title>BlogProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= disqus_init %>
  </head>

  <body>
    <nav class="nav navbar-inverse">
      <div class="wrapper">
        <h1 class="blog-headerline"><%= link_to(@blog.title, blog_path(@blog)) %></h1>
        <p>
          <% if @blog.user.avatar.present? %>
            <%= image_tag(@blog.user.avatar_url, size: "60x60", class: "img-circle") if @blog.user.avatar? %>
          <% end %>
        </p>
        <div class="blog-tab">
          <span><%= link_to("Home", root_path) %></span>
          <span><%= link_to("Archives", archives_blog_path(@blog)) %></span>
          <span><%= link_to("About", about_blog_path(@blog)) %></span>
        </div>
      </div>
      <% if current_user %>
        <div style="float: right;position: absolute; right: 0; top: 0;">
          <%= link_to("Dashboard", dashboard_path, class: "btn btn-info btn-xs") %>
        </div>
      <% end %>
    </nav>



      <%= yield %>


    <%= render "common/footer" %>
  </body>
</html>

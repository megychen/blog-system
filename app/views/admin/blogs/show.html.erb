<h2>Post Lists</h2>

<table class="table table-hover">
  <% @posts.each do |post| %>
    <tr>
      <th>Title</th>
      <th>Author Name</th>
      <th>Author Email</th>
      <th>Option</th>
    </tr>
    <tr>
      <td><%= link_to(post.title, account_post_path(post)) %></td>
      <td><%= post.user.user_name %></td>
      <td><%= post.user.email %></td>
      <td>
        <%= link_to edit_admin_post_path(post) do %>
          <i class="fa fa-pencil-square-o fa-lg" style="color:orange;"></i> |
        <% end %>
        <%= link_to admin_post_path(post), data: {confirm: "Are you sure?"}, method: :delete do %>
          <i class="fa fa-trash-o fa-lg" style="color:red;"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

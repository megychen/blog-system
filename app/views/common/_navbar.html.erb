<nav class="navbar navbar-default" role="navigation">


  <div class="navbar-header">
    <% if params[:controller] == "blogs" %>
      <% if params[:action] == "show" or  params[:action] == "archives" %>
        <a class="navbar-brand" href="/"> Blogger | <%= Blog.find(params[:id]).title %> </a>
      <% else %>
        <a class="navbar-brand" href="/"> Blogger </a>
      <% end %>
    <% elsif params[:controller] == "posts" %>
      <a class="navbar-brand" href="/"> Blogger | <%= Post.find(params[:id]).blog.title %> </a>
    <% else %>
      <a class="navbar-brand" href="/dashboard"> Blogger |
        <% if current_user %>
          <%= current_user.blog.title %>
        <% end %>
      </a>
    <% end %>
  </div>

  <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if !current_user %>
          <li><%= link_to("注册", new_user_registration_path) %> </li>
          <li><%= link_to("登录", new_user_session_path) %></li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag(current_user.avatar_url, size: "25x25", class: "img-circle") if current_user.avatar? %> <%= current_user.user_name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li> <%= link_to("编辑信息", edit_user_registration_path(current_user)) %> </li>
              <li> <%= link_to("退出", destroy_user_session_path, method: :delete) %> </li>
            </ul>
          </li>
          <% end %>
      </ul>
  </div>

</nav>

<div class="pull-right">
  <%= social_share_button_tag(@post.title) %>
</div>

<h4><%= @post.title %></h4>
<hr>
<p><%= sanitize @post.description %></p>
<br>
<i class="fa fa-clock-o" aria-hidden="true"></i> <%= @post.created_at.strftime("%Y-%m-%d") %>
<p class="pull-right">
  <span id="post-like-<%= @post.id %>">
    <%= render :partial => "like", :locals => { :post => @post } %>
  </span>
  <%= link_to(content_tag(:i, " Back", class: "fa fa-arrow-left"), url_for(:back)) %>
</p>

<%- disqus_thread %>

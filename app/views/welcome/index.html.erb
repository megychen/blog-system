<h3 class="text-center"> Hello, Welcome to Blogger! </h3>

<p class="btn btn-warning btn-xs" style="margin-bottom: 20px;">Hot Posts</p>

<table class="table table-hover">
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to(post.title, post_path(post)) %> (<small><%= post.impressionist_count(:filter=>:session_hash)%>人浏览</small>)</td>
      <td>Posted by <%= post.user.user_name %></td>
      <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
    </tr>
  <% end %>
</table>

<p class="text-center" style="margin-top: 30px;"><%= link_to("More Posts", more_posts_path, :class => "btn btn-default btn-sm" ) %></p>

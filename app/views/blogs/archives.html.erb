<div class="pull-right">
  <span class="dropdown">
    <button class="btn btn-default btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Categories
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <% @blog.categories.each do |category| %>
        <li> <%= link_to(category.name, archives_blog_path(@blog, category: category.name)) %> </li>
      <% end %>
    </ul>
  </span>
</div>

<h3>Blog Archive</h3>

<table class="table table-hover account-posts-content">
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
      <td><%= link_to(post.title, post_path(post)) %></td>
    </tr>
  <% end %>
</table>

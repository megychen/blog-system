<div class="pull-right">
  <%= link_to archives_blog_path(@blog) do %>
    <i class="fa fa-archive"> ARCHIVE </i>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div class="blog-posts">
    <h5 class="pull-right"><%= time_ago_in_words(post.created_at) %> ago</h5>
    <h4><%= link_to(post.title, post_path(post)) %></h4>
    <p><%= sanitize post.description %></p>
    <hr>
    <p class="pull-right">
      <%= post.get_upvotes.size %> likers | 
      <i class="fa fa-clock-o" aria-hidden="true"></i>
      <%= post.created_at.strftime("%Y-%m-%d") %>
    </p>
  </div>
<% end %>

<div class="text-center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>

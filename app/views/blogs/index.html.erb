<div class="pull-right">
  <%= link_to("Dashboard", dashboard_path, class: "btn btn-default btn-xs") %>
</div>
<h3>This is <%= current_user.user_name %>'s blog</h3>

<% @posts.each do |post| %>
  <h4><%= link_to(post.title, post_path(post)) %></h4>
  <p><%= sanitize post.description %></p>
  <p><%= time_ago_in_words(post.created_at) %> ago</p>
  <hr>
<% end %>
